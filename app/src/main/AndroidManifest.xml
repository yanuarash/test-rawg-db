<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rawgdb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_joystick"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_joystick"
        android:supportsRtl="true"
        android:theme="@style/Theme.RawgDB">
        <activity
            android:name=".activity.SplashScreenActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BookmarkActivity"
            android:exported="false" />
        <activity
            android:name=".activity.GameDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.GenreDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.RawgDB.NoActionBar">
        </activity>
    </application>

</manifest>